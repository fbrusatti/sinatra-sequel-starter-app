<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>VOCATIONAL-TEST</title>
  </head>
  <body>
      <div class="login-box">
        <div class="lineOne"></div>
        <h1>
          <p style="font-family:helvética;">
            |VOCATIONAL-TEST|
          </p>
        </h1>
        <div class="lineTwo"></div>

        <p>
          Por favor complete los siguientes campos para

          <% if @loginType == 'sign_up' %>
          <span>
            registrarse
          </span>
          <% else %>
          <span>
            iniciar sesion
          </span>
          <% end %>
        </p>

        <form>
          <% if @loginType == 'sign_up' %>
            <label for="username"> Nombre: </label>
            <input id ="username" placeholder="Marty McFly" type="text">
          <% end %>

          <label for="dni" > DNI: </label>
          <input id ="dni" type="number" placeholder="10 245 212">

          <label for="password" > Contraseña: </label>
          <input type="password" id ="password" placeholder="*******">

          <% if @loginType == 'sign_up' %>
            <label for="confirmPassword" > Confirme contraseña: </label>
            <input type="password" id ="confirmPassword" placeholder="*******">
          <% end %>
        </form>

        <button onclick="login()">
          <% if @loginType == 'sign_up' %>
            <span>
              registrarse
            </span>
          <% else %>
            <span>
              iniciar sesion
            </span>
          <% end %>
        </button>

        <h2 class="textLow">Click <a href="/careers_available">aqui</a>, para ver las carreras disponibles.</h2>
    </div>
  </body>
</html>

<script>
const login = async () => {
    const isSignUpPage = !!document.getElementById("confirmPassword");

    const user = getFormValues(isSignUpPage);

    if(!validateUser(user, isSignUpPage)) return;

    const params = `dni=${user.dni}&password=${user.password}`;

    if(isSignUpPage)
      params.concat(`&username=${user.username}`);

    const endPoint = isSignUpPage
      ? `/complete_sign_up`
      : `/complete_sign_in`

    window.location.href = `${endPoint}?${params}`;
}

const getFormValues = isSignUpPage => {
    const formValues = {
      dni: document.getElementById("dni").value,
      password: document.getElementById("password").value
    };

    if(isSignUpPage) {
      formValues.username = document.getElementById("username").value,
      formValues.confirmPassword = document.getElementById("confirmPassword").value;
    };

    return formValues;
}

const validateUser = (user, isSignUpPage) => {
    if (isSignUpPage && Object.values(user).some(userAttribute => userAttribute.length === 0)){
        alert("Por favor complete correctamente todos los campos :)");

        return false;

    }

    const millionNumber = 7;

    if (user.dni.length < millionNumber) {
        alert("El DNI no es correcto :|");

        return false;
    }

    if (isSignUpPage && user.password !== user.confirmPassword) {
        alert("Las contraseñas no coinciden :(");

    }

    return true;
}
</script>

